@model RZAWeb.Models.Rewards

@{
    ViewData["Title"] = "Details";
}

<h1>Redeem your reward</h1>

<div>
    <h4>Rewards</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RewardName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RewardName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RewardDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RewardDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RewardPoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RewardPoints)
        </dd>
    </dl>
</div>

<form asp-action="ConfirmRedeem">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RewardName" class="form-control" />
        <input type="hidden" asp-for="RewardDescription" class="form-control" />
        <input type="hidden" asp-for="RewardPoints" class="form-control" />
    <div class="form-group">
        <input type="submit" value="Redeem" class="btn btn-primary" />
    </div>
</form>
